import kaboom from "https://unpkg.com/kaplay/dist/kaboom.mjs";

kaboom();

loadSprite("player", "/sprites/player.png");

const player = add([
  sprite("player"),
  pos(100, 100),
  area(),
  body()
]);

keyDown("left", () => player.move(-120, 0));
keyDown("right", () => player.move(120, 0));
keyPress("space", () => {
  if (player.isGrounded()) player.jump(400);
});
